{
    "globals": {
        "console": true,
        "configuration": true,
        "fast": true,
        "chalk": true
    },
    "env": {
        "es6": true,
        "node": true,
        "amd": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-undef": 0
    }
}